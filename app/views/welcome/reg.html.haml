.flashWarning
  =flash[:notice]
%table.sam
  %tr{:height => "90%"}
    %td{:width => "25%"}
      %p.font
        = link_to 'Main', root_path
    %td.a{:width => "50%"}
      %h1
        Registration
      %p.font
        Enter the following data to complete registration:
      = form_tag "/reg" do
        E-mail:
        = text_field_tag :user_email, params[:user_email]
        Password:
        = password_field_tag :pass, params[:pass]
        %br
        = submit_tag("Register")

      %td{:width => "25%"}

